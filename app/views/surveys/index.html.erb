<h1>Listing surveys of <%= @current_user.name %></h1>

<table>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Description</th>
    <th>Initialtext</th>
    <th>Token</th>
    <th>Nvalue</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
    <th>Dimens√µes</th>
  </tr>

<% @surveys.each do |survey| %>
  <tr>
    <td><%= survey.user.name %></td>
    <td><%= survey.title %></td>
    <td><%= survey.description %></td>
    <td><%= survey.initialtext %></td>
    <td><%= survey.token %></td>
    <td><%= survey.nvalue %></td>
    <td><%= survey.status %></td>
    <td><%= link_to 'Show', survey %></td>
    <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
    <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td>
        <%= survey.dimensions.map(&:name).to_s [survey.dimensions.map(&:status) => "OFF"]%>
    </td>
  </tr>
<% end %>
</table>

